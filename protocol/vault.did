type Satoshi = nat64;

type InitPayload = record {
  bitcoin_canister_id : principal;
  bitcoin_private_key_wif: text;
};

type OutPoint = record {
  txid : blob;
  vout : nat32
};

type Utxo = record {
  outpoint: OutPoint;
  value: Satoshi;
  height: nat32;
  confirmations: nat32;
};

service: () -> {
  btc_address: () -> (text) query;
  balance: () -> (nat64);
  get_utxos: () -> (vec Utxo);
  send: (amount: nat64, destination: text) -> ();
}

